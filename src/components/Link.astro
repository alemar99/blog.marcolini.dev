---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn("inline-block decoration-primary-500/15 dark:decoration-primary-300/30 hover:decoration-primary-700/25 hover:dark:decoration-primary-500/50 text-current hover:text-primary-500 hover:dark:text-primary-300 transition-colors duration-300 ease-in-out", underline && "underline underline-offset-2")}
  {...rest}>
  <slot/>
</a>
